@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
<link href="wwwroot/css/home.css" rel="stylesheet" asp-append-version="true" />
<form asp-action="search" method="post" class="sea">
    <div class="search-container">
        <input type="text" name="key" value="@ViewBag.Key" class="search-input">
        <a class="search-btn" style="text-decoration:none">
            <i class="fas fa-search"></i>
            <input class="fas fa-search" type="submit" id="s2" value="Search" />
        </a>
    </div>
</form>

<div class="card-container">
    @foreach (var product in Model)
    {
        <div class="card">
            <img src="@product.url" alt="@product.Name" class="card-img" />
            <hr class="sh" />
            <div class="card-content">
                <h2>@product.Name</h2>
                <p>Price: $@product.Price</p>
                <p>Type: @product.Type.Name</p>
                <form asp-action="addToCart" method="post">
                    <input type="hidden" name="productId" value="@product.PrId" />
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/home.css" />
